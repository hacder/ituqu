<%= form_for @journal, :html => { multipart: true, class: 'row journal_form' } do |f| %>
<%= f.hidden_field :token %>

<%= f.text_field :title, class: 'journal_title required', placeholder: "标题", 
autofocus: true %>
<%= f.text_area :content, class: 'ckeditor journal_text' %>

<div class="journal_action">
	<%= f.submit "发布", class: 'btn btn-primary btn-large' %>
</div>
<% end %>
